                print('\'The System is Laughing\'')
            elif choice == 'A' or 'B':
                print('hmmm')
                print('-30')
            elif social_points > 70:
                print('\'You call upon your Friends \'')
                print('How DARE YOU COWARD')
                print('-30')
                system_health -= 30
                if stress_level < 70:
                    print('-60')
                    system_health -= 60
                    print('DO YOU HAVE NO NERVES')
                else:
                    print('-20')
                    system_health -= 20
if (battle >= 50) and (battle <= 75):

    new_bat = input('Pick your field')
    if new_bat == 'History' or 'English':
        if current_gpa > 3 and stress_level < 50:
            print("MY WEAKNESS")
            print('AGHHHHHHH')
            print('YOU ARE GOOD')
            system_health -= 100
            print('-100 HP CRITTTT')
        elif current_gpa > 3 or stress_level < 50:
            print('Ugh my Weakness)')
            system_health -= 40
            print('-40 HP CRIT')
        elif social_points > 70:
            print('-20')
            system_health -= 20
        elif 'a' in student_name:
            print(f'{student_name} you are doing well, BUT I AM BETTER')
            print('HEAL +50')
            system_health += 50
    if new_bat == 'Math':
        print('A battle of Wits HUH')
        print('what is (2x^2 + 4x^2 = 6x^2, x = 1')
        print('Challenge, (x+3)(2x^2 - x +4)+(x^2 - 5x) x=2')
        x = int(input('Enter a Number'))
        if x is y:
            system_health -= 25
            print('-25 HP')
        elif x is not b or y:
            system_health += 40
            print('Heal +40 HP')
        elif x is b :
            system_health -= 75
            print('-75 HP')
            print(f'WELL DONE {student_name}')
else:
    print('Invalid choice')
    print('Invalid choice')
    print('YOU DARE DEFY ME')
    print('Game over')
    print('PLAYER HEALTH -9999')

f = 30
