print('Test you Might -System')
print('Enter a Number 1-75')
battle = random.randint(1,75)
if (battle >= 1) and (battle <= 25):
    print("TEST YOUR INTELLECT")
    if current_gpa >= 3.5 and study_hours > 40:
        print('-20 HP')
        print('IS THAT ALL YOU GOT')
        system_health -= 20
        if current_gpa >= 4 and study_hours >= 55:
            print('-40 HP')
            print('UGH AHHH, YOU RAT!')
            system_health -= 40
            if choice == 'C':
                print('-60 CRIT')
                system_health -= 60
if (battle >= 25) and (battle <= 50):
    print('Fine, We battle on your Terms...')
    new_bat = input('Pick your field')
    if new_bat in study_options:
        if new_bat == 'Programming':
            print('YOU\'D THINK ID LOSE IN A BATTLE OF CODE?!?')
